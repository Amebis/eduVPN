                x:Name="SecureInternet"
                Grid.Row="1"
                Margin="5"
                IsTabStop="False"
                Content="{Binding Path=Panels[1]}"
                AutomationProperties.LabeledBy="{Binding ElementName=SecureInternetLabel}"/>
        </Grid>

